@model IEnumerable<POS_91Cafe.ViewModels.IngredientViewModel>
@{
    ViewData["Title"] = "Ingredients Inventory";
}

<div class="container-fluid py-4 ingredients-page">

    <!-- Header Area -->
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-3">
        <div>
            <h2 class="fw-bold" style="color: var(--brand-dark);">Ingredients Inventory</h2>
            <p class="text-muted mb-0">Manage stock for coffee beans, milk, syrups, and supplies.</p>
        </div>
        <button class="btn btn-add-ingredient shadow-sm" data-bs-toggle="modal" data-bs-target="#ingredientModal" data-id="0">
            <i class="fas fa-plus me-2"></i>Add Ingredient
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4" style="background-color: #e8f5e9; color: #1b5e20;">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4" style="background-color: #ffebee; color: #c62828;">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="inventory-container">
        <!-- Search & Filter -->
        <div class="d-flex gap-3 mb-4">
            <div class="input-group" style="max-width: 100%; width: 400px;">
                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                <input type="text" id="ingredientSearch" class="form-control border-start-0" placeholder="Search ingredients...">
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-custom align-middle mb-0">
                <thead>
                    <tr>
                        <th>Ingredient Name</th>
                        <!-- Category Column Removed -->
                        <th>Current Stock</th>
                        <th>Unit Cost (raw)</th>
                        <th>Cost per Stored Unit</th>
                        <th>Total Value</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody id="ingredientsTableBody">
                    @foreach (var item in Model)
                    {
                        var isLowStock = item.Status?.ToLower().Contains("low") ?? false;
                        <tr>
                            <td class="fw-semibold">@item.Name</td>
                            <!-- Category Data Removed -->
                            <td>
                                <div class="d-flex align-items-baseline gap-2">
                                    <span class="fw-bold" style="font-size: 1.05em;">@item.CurrentQuantity.ToString("0.##")</span>
                                    <span class="text-muted small">@item.Unit</span>
                                </div>
                            </td>
                            <td class="currency">@item.CostPriceDisplay</td>
                            <td>@item.CostPerStoredUnitDisplay <div class="small-muted">per @item.Unit</div></td>
                            <td class="total-value">@item.TotalValueDisplay</td>
                            <td>
                                @if (isLowStock)
                                {
                                    <span class="badge-stock bg-low"><i class="fas fa-exclamation-circle me-1"></i> Low Stock</span>
                                }
                                else
                                {
                                    <span class="badge-stock bg-good"><i class="fas fa-check-circle me-1"></i> In Stock</span>
                                }
                            </td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-light border"
                                        data-bs-toggle="modal"
                                        data-bs-target="#ingredientModal"
                                        data-id="@item.IngredientID"
                                        data-name="@item.Name"
                                        data-quantity="@item.CurrentQuantity"
                                        data-unit="@item.Unit"
                                        data-cost="@item.CostPrice"
                                        data-threshold="@item.LowStockThreshold">
                                    <i class="fas fa-pen text-secondary"></i>
                                </button>

                                <form asp-action="Delete" asp-route-id="@item.IngredientID" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete @item.Name?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-light border text-danger ms-1">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="ingredientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold text-dark" id="modalTitle">Add Ingredient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-controller="Ingredients" asp-action="Save" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <!-- Hidden ID field: 0 for new, real ID for edit -->
                    <input type="hidden" name="IngredientID" id="IngredientID" value="0" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-secondary small text-uppercase">Ingredient Name</label>
                        <input type="text" name="Name" id="Name" class="form-control form-control-lg" placeholder="e.g. Mozzarella Block" required />
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <label class="form-label fw-semibold text-secondary small text-uppercase">Current Qty</label>
                            <input type="number" step="0.01" name="CurrentQuantity" id="CurrentQuantity" class="form-control" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-semibold text-secondary small text-uppercase">Unit</label>
                            <select name="Unit" id="Unit" class="form-select" required>
                                <option value="g">grams (g)</option>
                                <option value="kg">kilograms (kg)</option>
                                <option value="ml">milliliters (ml)</option>
                                <option value="l">liters (L)</option>
                                <option value="pcs">pieces (pcs)</option>
                                <option value="btl">bottles (btl)</option>
                                <option value="other">Other (type...)</option>
                            </select>
                            <input type="text" name="UnitOther" id="UnitOther" class="form-control mt-2 d-none" placeholder="Specify unit (e.g. tbsp)" />
                        </div>
                    </div>

                    <div class="row g-3 mb-2">
                        <div class="col-6">
                            <label class="form-label fw-semibold text-secondary small text-uppercase">Cost (₱)</label>
                            <input type="number" step="0.01" name="CostPrice" id="CostPrice" class="form-control" required />
                            <div class="form-text small-muted">If you already know the per-unit cost enter it directly. Or check "Cost is package total" and supply package size.</div>
                        </div>

                        <div class="col-6 d-flex align-items-center">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="IsPackagePrice" name="IsPackagePrice" />
                                <label class="form-check-label small-muted" for="IsPackagePrice">Cost is package total</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <label class="form-label fw-semibold text-secondary small text-uppercase">Package Quantity</label>
                            <input type="number" step="0.01" name="PackageQuantity" id="PackageQuantity" class="form-control" placeholder="e.g. 300" />
                            <div class="form-text small-muted">Enter package size that corresponds to the package cost (e.g. 300 for 300 g).</div>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-semibold text-secondary small text-uppercase">Package Unit</label>
                            <select name="PackageUnit" id="PackageUnit" class="form-select">
                                <option value="">(same as Unit)</option>
                                <option value="g">grams (g)</option>
                                <option value="kg">kilograms (kg)</option>
                                <option value="ml">milliliters (ml)</option>
                                <option value="l">liters (L)</option>
                                <option value="pcs">pieces (pcs)</option>
                                <option value="btl">bottles (btl)</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-6">
                            <label class="form-label fw-semibold text-secondary small text-uppercase">Alert Threshold</label>
                            <input type="number" step="0.01" name="LowStockThreshold" id="LowStockThreshold" class="form-control" value="5" required />
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-top-0 px-4 pb-4">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Ingredient</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search
        document.getElementById('ingredientSearch').addEventListener('keyup', function() {
            let value = this.value.toLowerCase();
            let rows = document.querySelectorAll('#ingredientsTableBody tr');
            rows.forEach(row => {
                let text = row.textContent.toLowerCase();
                row.style.display = text.indexOf(value) > -1 ? '' : 'none';
            });
        });

        // Modal handling
        var ingredientModal = document.getElementById('ingredientModal');
        ingredientModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button ? button.getAttribute('data-id') : null;
            var name = button ? button.getAttribute('data-name') : null;
            var qty = button ? button.getAttribute('data-quantity') : null;
            var unit = button ? button.getAttribute('data-unit') : null;
            var cost = button ? button.getAttribute('data-cost') : null;
            var thresh = button ? button.getAttribute('data-threshold') : null;

            var modalTitle = ingredientModal.querySelector('.modal-title');
            var idInput = ingredientModal.querySelector('#IngredientID');
            var nameInput = ingredientModal.querySelector('#Name');
            var qtyInput = ingredientModal.querySelector('#CurrentQuantity');
            var unitSelect = ingredientModal.querySelector('#Unit');
            var unitOther = ingredientModal.querySelector('#UnitOther');
            var costInput = ingredientModal.querySelector('#CostPrice');
            var threshInput = ingredientModal.querySelector('#LowStockThreshold');
            var isPackageInput = ingredientModal.querySelector('#IsPackagePrice');
            var packageQtyInput = ingredientModal.querySelector('#PackageQuantity');
            var packageUnitSelect = ingredientModal.querySelector('#PackageUnit');

            if (id && id !== '0') {
                modalTitle.textContent = 'Edit Ingredient';
                idInput.value = id;
                nameInput.value = name ?? '';
                qtyInput.value = qty ?? '';
                // set unit select (if known option exists) otherwise set to Other and populate text input
                if (unit) {
                    var opt = Array.from(unitSelect.options).find(o => o.value.toLowerCase() === unit.toLowerCase());
                    if (opt) {
                        unitSelect.value = opt.value;
                        unitOther.classList.add('d-none');
                    } else {
                        unitSelect.value = 'other';
                        unitOther.classList.remove('d-none');
                        unitOther.value = unit;
                    }
                } else {
                    unitSelect.value = 'g';
                    unitOther.classList.add('d-none');
                    unitOther.value = '';
                }
                costInput.value = cost ?? '';
                threshInput.value = thresh ?? threshInput.value ?? '5';
                isPackageInput.checked = false;
                packageQtyInput.value = '';
                packageUnitSelect.value = '';
            } else {
                modalTitle.textContent = 'Add New Ingredient';
                idInput.value = '0';
                nameInput.value = '';
                qtyInput.value = '';
                unitSelect.value = 'g';
                unitOther.classList.add('d-none');
                unitOther.value = '';
                costInput.value = '';
                threshInput.value = '5';
                isPackageInput.checked = false;
                packageQtyInput.value = '';
                packageUnitSelect.value = '';
            }

            // sync package unit placeholder with selected unit
            syncPackageUnitPlaceholder();
        });

        // Toggle UnitOther input when "Other" is selected
        document.getElementById('Unit').addEventListener('change', function() {
            var other = document.getElementById('UnitOther');
            if (this.value === 'other') other.classList.remove('d-none');
            else {
                other.classList.add('d-none');
                other.value = '';
            }
            // keep package unit choices user-friendly
            syncPackageUnitPlaceholder();
        });

        function syncPackageUnitPlaceholder() {
            var unit = document.getElementById('Unit').value;
            var packageUnit = document.getElementById('PackageUnit');
            if (!packageUnit) return;
            // if package unit is empty (use same as unit), set the placeholder text (visual only)
            // (we don't change the value automatically so user can override)
            packageUnit.querySelector('option[value=""]').text = '(same as ' + unit + ')';
        }

        // If user checks "Cost is package total", scroll to package fields
        document.getElementById('IsPackagePrice').addEventListener('change', function() {
            if (this.checked) {
                document.getElementById('PackageQuantity').focus();
            }
        });
    </script>
}