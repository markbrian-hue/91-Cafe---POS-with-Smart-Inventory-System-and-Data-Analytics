@{
    ViewData["Title"] = "Order History";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold" style="color: var(--brand-dark);">Order History</h2>
            <p class="text-muted mb-0">View past transactions (Philippine Time).</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4" style="border-radius: 16px;">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="date" id="dateFilter" class="form-control" style="border-radius: 10px;">
                </div>
                <div class="col-md-4">
                    <input type="text" id="searchFilter" class="form-control" placeholder="Search Sale ID (e.g. 45) or Item" style="border-radius: 10px;">
                </div>
                <div class="col-md-3">
                    <select id="paymentFilter" class="form-select" style="border-radius: 10px;">
                        <option value="">All Payments</option>
                        <option value="Cash">Cash</option>
                        <option value="GCash">GCash / Maya</option> <!-- Fixed value case -->
                    </select>
                </div>
                <div class="col-md-2">
                    <button onclick="loadTickets()" class="btn btn-primary w-100" style="border-radius: 10px;">Filter</button>
                </div>
            </div>
        </div>
    </div>

    <div id="ticketsContainer" class="row g-4">
        <!-- Tickets load here -->
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // 1. Set default date to today (PH Time)
            // We use 'sv-SE' locale hack to get YYYY-MM-DD format quickly
            const now = new Date();
            const phTime = new Date(now.toLocaleString("en-US", { timeZone: "Asia/Manila" }));

            const year = phTime.getFullYear();
            const month = String(phTime.getMonth() + 1).padStart(2, '0');
            const day = String(phTime.getDate()).padStart(2, '0');

            document.getElementById('dateFilter').value = `${year}-${month}-${day}`;

            // 2. Load initial data
            loadTickets();
        });

        async function loadTickets() {
            const date = document.getElementById('dateFilter').value;
            const search = document.getElementById('searchFilter').value;
            const payment = document.getElementById('paymentFilter').value;
            const container = document.getElementById('ticketsContainer');

            // Show Loading Spinner
            container.innerHTML = '<div class="text-center w-100 py-5"><div class="spinner-border text-primary"></div></div>';

            const params = new URLSearchParams();
            if (date) params.append('date', date);
            if (search) params.append('search', search);
            if (payment) params.append('payment', payment);

            try {
                const res = await fetch(`/OrderTickets/GetTickets?${params.toString()}`);
                if (!res.ok) throw new Error("Network error");

                const data = await res.json();
                container.innerHTML = '';

                if (data.length === 0) {
                    container.innerHTML = '<div class="text-center w-100 py-5 text-muted"><i class="fas fa-search fa-2x mb-3 opacity-50"></i><br>No orders found for this filter.</div>';
                    return;
                }

                data.forEach(ticket => {
                    // Format Items List
                    let itemsHtml = ticket.items.map(i =>
                        `<div class="d-flex justify-content-between small mb-1">
                            <span class="text-truncate" style="max-width: 70%;">${i.quantity}x ${i.productName}</span>
                            <span>₱${i.lineTotal.toFixed(2)}</span>
                         </div>`
                    ).join('');

                    // === DATE FIX ===
                    // Server sends UTC string e.g. "2025-11-23T16:25:00"
                    // We force it to be treated as UTC by appending 'Z' if missing
                    let dateStr = ticket.saleDate;
                    if (dateStr && !dateStr.endsWith("Z")) {
                        dateStr += "Z";
                    }
                    const saleDate = new Date(dateStr);

                    // Display in Philippine Time
                    const phTimeDisplay = saleDate.toLocaleTimeString('en-PH', {
                        timeZone: 'Asia/Manila',
                        hour: 'numeric',
                        minute: '2-digit',
                        hour12: true
                    });

                    const html = `
                        <div class="col-md-4 col-lg-3">
                            <div class="card shadow-sm h-100 border-0" style="border-radius: 16px;">
                                <div class="card-header bg-white border-0 pt-3 d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-primary">#${ticket.saleId}</span>
                                    <span class="badge bg-success bg-opacity-10 text-success">Completed</span>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3 text-muted small d-flex justify-content-between">
                                        <span><i class="far fa-clock me-1"></i> ${phTimeDisplay}</span>
                                        <span class="badge border text-secondary fw-normal">${ticket.paymentMethod}</span>
                                    </div>

                                    <div class="mb-3 border-top border-bottom py-2" style="min-height: 60px;">
                                        ${itemsHtml}
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="text-muted small">Total Amount</span>
                                        <span class="fw-bold text-dark" style="font-size: 1.3rem;">₱${ticket.totalAmount.toFixed(2)}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    container.innerHTML += html;
                });

            } catch (err) {
                console.error(err);
                container.innerHTML = '<div class="text-danger text-center w-100 py-5">Failed to load tickets. Please try again.</div>';
            }
        }
    </script>
}