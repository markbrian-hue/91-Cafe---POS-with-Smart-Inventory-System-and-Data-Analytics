@model POS_91Cafe.Models.Product
@{
    ViewData["Title"] = "Manage Recipe: " + Model.Name;
    var allIngredients = ViewBag.AllIngredients as IEnumerable<POS_91Cafe.Models.Ingredient>;
    // We no longer need returnCategory for back navigation because we always show ALL on return.
}

<div class="container-fluid py-4">
    <a asp-action="Index"
       class="btn btn-light mb-4">
        <i class="fas fa-arrow-left me-2"></i>Back to Recipes
    </a>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius:16px;">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="fw-bold text-dark mb-0">Add Ingredient</h5>
                </div>
                <div class="card-body px-4 pb-4">
                    <p class="text-muted small">
                        Select an ingredient from your inventory to link to <strong>@Model.Name</strong>.
                    </p>

                    <form asp-action="AddIngredient" method="post">
                        <input type="hidden" name="ProductID" value="@Model.ProductID" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-secondary small">Select Ingredient</label>
                            <select name="IngredientID" class="form-select form-select-lg" required>
                                <option value="">-- Choose Ingredient --</option>
                                @foreach (var ing in allIngredients)
                                {
                                    <option value="@ing.IngredientID">@ing.Name (@ing.Unit)</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold text-secondary small">Quantity Used</label>
                            <div class="input-group">
                                <input type="number" name="QuantityUsed" step="0.01" class="form-control form-control-lg" required placeholder="0.00" />
                                <span class="input-group-text bg-light text-muted">units</span>
                            </div>
                            <div class="form-text">Amount deducted per sale of this product.</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2" style="border-radius:10px;">
                            <i class="fas fa-plus-circle me-2"></i>Add to Recipe
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100" style="border-radius:16px;">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Current Recipe</h5>
                    <span class="badge bg-light text-dark border">@Model.ProductIngredients.Count items</span>
                </div>
                <div class="card-body px-4 pb-4">
                    @if (Model.ProductIngredients.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 rounded-start ps-3">Ingredient Name</th>
                                        <th class="border-0">Quantity Deducted</th>
                                        <th class="border-0">Cost Estimate</th>
                                        <th class="border-0 rounded-end text-end pe-3">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ProductIngredients)
                                    {
                                        var cost = item.QuantityUsed * item.Ingredient.CostPrice;
                                        <tr>
                                            <td class="ps-3 fw-semibold">@item.Ingredient.Name</td>
                                            <td>
                                                <span class="badge bg-info text-dark bg-opacity-25 border border-info">
                                                    - @item.QuantityUsed.ToString("0.##") @item.Ingredient.Unit
                                                </span>
                                            </td>
                                            <td class="text-muted small">₱@cost.ToString("F2")</td>
                                            <td class="text-end pe-3">
                                                <form asp-action="RemoveIngredient"
                                                      asp-route-id="@item.ProductIngredientID"
                                                      method="post"
                                                      class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0"
                                                            onclick="return confirm('Remove this ingredient?')">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="alert alert-light border mt-3 d-flex align-items-center">
                            <i class="fas fa-info-circle text-primary me-3 fs-4"></i>
                            <div>
                                <small class="text-muted d-block">Total Recipe Cost:</small>
                                <strong>₱@Model.ProductIngredients.Sum(pi => pi.QuantityUsed * pi.Ingredient.CostPrice).ToString("F2")</strong>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-blender fa-3x mb-3 opacity-25"></i>
                            <p>No ingredients linked yet.<br>Add ingredients from the left panel.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>