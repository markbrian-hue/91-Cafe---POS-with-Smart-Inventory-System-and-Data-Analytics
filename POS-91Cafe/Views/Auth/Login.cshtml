@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - 91 Cafe POS</title>

    <!-- Fonts & Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Link to your updated Site.css -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-body">

    <div class="login-wrapper">
        <!-- Left Side: Brand & Image -->
        <div class="login-brand-side">
            <div class="login-brand-overlay">
                <div class="mb-4">
                    <!-- Large Logo Icon -->
                    <div style="background:white; width: 100px; height: 100px; border-radius: 50%; display:flex; align-items:center; justify-content:center; margin:0 auto;">
                        <i class="fas fa-mug-hot fa-3x" style="color: #4A3426;"></i>
                    </div>
                </div>
                <h1 class="display-4 fw-bold">91 Cafe</h1>
                <p class="lead opacity-75 mb-5">Brewing Moments, Serving Memories.</p>

                <div class="small text-white-50 position-absolute bottom-0 mb-4">
                    &copy; 2025 POS System Edition
                </div>
            </div>
        </div>

        <!-- Right Side: Login Form -->
        <div class="login-form-side">
            <div class="w-100" style="max-width: 360px; margin: 0 auto;">

                <div class="text-start mb-5">
                    <h2 class="fw-bold text-dark mb-2">Welcome Back</h2>
                    <p class="text-muted">Please sign in to access the dashboard.</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center border-0 shadow-sm mb-4" style="background-color: #fff5f5; color: #dc3545; border-left: 4px solid #dc3545 !important;">
                        <i class="fas fa-exclamation-circle me-3"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <form method="post">
                    <!-- Username -->
                    <div class="mb-4">
                        <label class="form-label text-muted small fw-bold text-uppercase">Username</label>
                        <div class="input-group login-input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" name="username" placeholder="Type your username" required>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-5">
                        <label class="form-label text-muted small fw-bold text-uppercase">Password</label>
                        <div class="input-group login-input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" name="password" placeholder="Type your password" required>
                        </div>
                    </div>

                    <!-- Button -->
                    <button type="submit" class="btn btn-login-primary w-100 shadow-sm">
                        Sign In <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </form>

                <div class="text-center mt-4">
                    <small class="text-muted">Need help? <a href="#" class="text-decoration-none text-secondary">Contact Admin</a></small>
                </div>
            </div>
        </div>
    </div>

</body>
</html>