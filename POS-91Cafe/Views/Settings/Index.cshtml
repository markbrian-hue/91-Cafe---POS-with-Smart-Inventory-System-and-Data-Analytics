@{
    ViewData["Title"] = "Settings";
}

<h1>Settings</h1>
<p class="text-secondary">Manage your shop profile and operational settings.</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Save" method="post">
    @Html.AntiForgeryToken()

    <!-- Shop Profile -->
    <div class="card mt-4">
        <div class="card-header">Shop Profile</div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Shop Name</label>
                <input type="text" name="settings[ShopName]" value="@ViewBag.ShopName" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Address</label>
                <input type="text" name="settings[ShopAddress]" value="@ViewBag.ShopAddress" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contact Info (Phone/Email)</label>
                <input type="text" name="settings[ContactInfo]" value="@ViewBag.ContactInfo" class="form-control" />
            </div>
        </div>
    </div>

    <!-- Financial Settings -->
    <div class="card mt-4">
        <div class="card-header">Financial Settings</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Currency Symbol</label>
                    <input type="text" name="settings[CurrencySymbol]" value="@ViewBag.CurrencySymbol" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tax Rate (%)</label>
                    <input type="number" step="0.01" name="settings[TaxRate]" value="@ViewBag.TaxRate" class="form-control" />
                    <div class="form-text">Enter as a percentage, e.g., 12 for 12%. Set to 0 to disable tax.</div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end mt-4">
        <button type="submit" class="btn btn-primary">Save Settings</button>
    </div>
</form>