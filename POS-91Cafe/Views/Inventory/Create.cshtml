@model POS_91Cafe.Models.Product

@{
    ViewData["Title"] = "Add New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 16px;">
                <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
                    <h4 class="fw-bold text-dark">Add New Product</h4>
                    <p class="text-muted small">Create a new menu item.</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold text-muted small">PRODUCT NAME</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g. Caramel Macchiato" style="border-radius: 10px;" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="CategoryID" class="form-label fw-bold text-muted small">CATEGORY</label>
                            <select asp-for="CategoryID" class="form-select form-select-lg" asp-items="ViewBag.CategoryID" style="border-radius: 10px;">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Selling Price -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="SellingPrice" class="form-label fw-bold text-muted small">SELLING PRICE (₱)</label>
                                <input asp-for="SellingPrice" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" style="border-radius: 10px;" />
                                <span asp-validation-for="SellingPrice" class="text-danger"></span>
                            </div>

                            <!-- Unit -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Unit" class="form-label fw-bold text-muted small">UNIT / VARIATION</label>
                                <input asp-for="Unit" class="form-control form-control-lg" placeholder="e.g. Large / pc" style="border-radius: 10px;" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- NOTE: Cost Price removed. It will be 0 until Recipe is added. -->
                        <div class="alert alert-light border d-flex align-items-center" role="alert">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            <div class="small text-muted">
                                Cost price will be calculated automatically once you configure the recipe ingredients.
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-light border px-4" style="border-radius: 10px;">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5" style="background-color: var(--brand-primary); border: none; border-radius: 10px;">Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}