@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 91 Cafe POS</title>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @Html.AntiForgeryToken()

    <!-- === MOBILE HEADER === -->
    <nav class="navbar navbar-expand-md bg-white border-bottom d-md-none fixed-top shadow-sm px-3">
        <div class="d-flex align-items-center justify-content-between w-100">
            <a class="navbar-brand fw-bold text-dark d-flex align-items-center gap-2" href="#">
                <i class="fas fa-coffee text-primary"></i> 91 Cafe
            </a>
            <button class="btn btn-light border" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <div class="main-wrapper">

        <!-- === SIDEBAR DESKTOP === -->
        <!-- flex-column ensures the bottom menu stays at the bottom -->
        <aside class="sidebar-desktop d-none d-md-flex flex-column">

            <!-- Brand -->
            <div class="sidebar-header">
                <a class="sidebar-brand" href="/">
                    <div class="brand-icon-box">
                        <i class="fas fa-mug-hot"></i>
                    </div>
                    <div class="brand-text">
                        <h4>91 Cafe</h4>
                        <span>POS System</span>
                    </div>
                </a>
            </div>

            <!-- Main Menu (Scrollable) -->
            <nav class="sidebar-menu flex-grow-1 overflow-auto">
                <div class="nav-label">Operations</div>
                <a class="nav-link @(currentController == "Sales" ? "active" : "")" asp-controller="Sales" asp-action="Index">
                    <i class="fas fa-cash-register"></i><span>Point of Sale</span>
                </a>
                <a class="nav-link @(currentController == "OrderTickets" ? "active" : "")" asp-controller="OrderTickets" asp-action="Index">
                    <i class="fas fa-receipt"></i><span>Orders</span>
                </a>

                <div class="nav-label">Inventory</div>
                <a class="nav-link @(currentController == "Inventory" ? "active" : "")" asp-controller="Inventory" asp-action="Index">
                    <i class="fas fa-box-open"></i><span>Products</span>
                </a>
                <a class="nav-link @(currentController == "Recipes" ? "active" : "")" asp-controller="Recipes" asp-action="Index">
                    <i class="fas fa-book-open"></i><span>Recipes</span>
                </a>
                <a class="nav-link @(currentController == "Ingredients" ? "active" : "")" asp-controller="Ingredients" asp-action="Index">
                    <i class="fas fa-cubes"></i><span>Ingredients</span>
                </a>

                <div class="nav-label">Insights</div>
                <a class="nav-link @(currentController == "Analytics" ? "active" : "")" asp-controller="Analytics" asp-action="Index">
                    <i class="fas fa-chart-pie"></i><span>Analytics</span>
                </a>
                <a class="nav-link @(currentController == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Index">
                    <i class="fas fa-file-invoice-dollar"></i><span>Reports</span>
                </a>
            </nav>

            <!-- === LOGOUT BUTTON (Seamless Style) === -->
            <!-- Using 'sidebar-menu' class here ensures it inherits the exact same link styling -->
            <nav class="sidebar-menu mt-auto pt-3 pb-3">
                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                </a>
            </nav>

        </aside>

        <!-- === TOP NAVBAR === -->
        <header class="top-navbar d-none d-md-flex">
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-link text-dark p-0 text-decoration-none" id="sidebarToggle" style="font-size: 1.2rem;">
                    <i class="fas fa-bars"></i>
                </button>
                <!-- Dynamic Title -->
                <h6 class="mb-0 fw-bold text-secondary">@ViewData["Title"]</h6>
            </div>

            <div class="d-flex align-items-center gap-4">
                <!-- User Profile -->
                <div class="d-flex align-items-center gap-2">
                    <div class="text-end lh-1 d-none d-lg-block">
                        <div class="fw-bold text-dark" style="font-size: 0.9rem;">Owner</div>
                        <small class="text-muted" style="font-size: 0.75rem;">Admin Access</small>
                    </div>
                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border" style="width:40px; height:40px;">
                        <i class="fas fa-user-shield text-secondary"></i>
                    </div>
                </div>
            </div>
        </header>

        <!-- === MAIN CONTENT === -->
        <main class="content-main">
            <div class="d-md-none" style="height: 70px;"></div> <!-- Mobile spacer -->
            @RenderBody()
        </main>
    </div>

    <!-- === MOBILE MENU (Offcanvas) === -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileMenu">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title fw-bold text-dark">
                <i class="fas fa-coffee me-2 text-primary"></i>Menu
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body p-0 d-flex flex-column">
            <div class="list-group list-group-flush flex-grow-1">
                <a class="list-group-item list-group-item-action p-3 @(currentController == "Sales" ? "active" : "")" asp-controller="Sales" asp-action="Index"><i class="fas fa-cash-register me-3"></i>Point of Sale</a>
                <a class="list-group-item list-group-item-action p-3 @(currentController == "OrderTickets" ? "active" : "")" asp-controller="OrderTickets" asp-action="Index"><i class="fas fa-receipt me-3"></i>Orders</a>
                <a class="list-group-item list-group-item-action p-3 @(currentController == "Inventory" ? "active" : "")" asp-controller="Inventory" asp-action="Index"><i class="fas fa-box-open me-3"></i>Products</a>
                <a class="list-group-item list-group-item-action p-3 @(currentController == "Recipes" ? "active" : "")" asp-controller="Recipes" asp-action="Index"><i class="fas fa-book-open me-3"></i>Recipes</a>
                <a class="list-group-item list-group-item-action p-3 @(currentController == "Ingredients" ? "active" : "")" asp-controller="Ingredients" asp-action="Index"><i class="fas fa-cubes me-3"></i>Ingredients</a>
                <a class="list-group-item list-group-item-action p-3 @(currentController == "Analytics" ? "active" : "")" asp-controller="Analytics" asp-action="Index"><i class="fas fa-chart-pie me-3"></i>Analytics</a>
                <a class="list-group-item list-group-item-action p-3 @(currentController == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Index"><i class="fas fa-file-invoice-dollar me-3"></i>Reports</a>
            </div>

            <!-- Mobile Logout -->
            <div class="p-3 border-top mt-auto">
                <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger w-100 py-2 fw-bold">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const toggleBtn = document.getElementById("sidebarToggle");
        if(toggleBtn) {
            toggleBtn.addEventListener("click", function (e) {
                e.preventDefault();
                document.body.classList.toggle("sb-sidenav-toggled");
                const isCollapsed = document.body.classList.contains("sb-sidenav-toggled");
                localStorage.setItem('sidebar-collapsed', isCollapsed);
            });
        }

        document.addEventListener("DOMContentLoaded", function() {
            if(localStorage.getItem('sidebar-collapsed') === 'true') {
                document.body.classList.add("sb-sidenav-toggled");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>